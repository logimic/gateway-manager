{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./",
    "baseUrl": "./",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2016",
      "dom"
    ]
  },
  "include":[
      "**/*"
  ],
  "exclude": [
      "node_modules",
      "**/*.spec.ts"
  ]
}
